<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>client.properties</value>
            </list>
        </property>
    </bean>

    <bean id="client" class="com.company.entity.Client">
        <constructor-arg index="0" value="${id}"/>
        <constructor-arg index="1" value="${name}"/>
    </bean>

    <bean id="event" class="com.company.entity.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="app" class="com.company.App">
        <constructor-arg index="0" value="#{client}"/>
        <constructor-arg index="1" ref="consoleLogger"/>
        <constructor-arg index="2" ref="loggers"/>
    </bean>
</beans>